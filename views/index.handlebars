<div class="container-fluid">

    <div class="row mb-n4">

        <main class="col-12 jumbotron jumbotron-fluid">

            <div class="container d-flex justify-content-center">
                <h1 class="display-4">Eat DA Burger!</h1>
                <img src="/assets/images/burger.png">
            </div>
        </main>
    </div>

    <section class="row">

        <div class="col-6 border-right border-dark overflow-auto margin-fix">
            <h2>Burger List:</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item">

                    <div class="row clearfix">

                        <h3 class="col-8 text-capitalize">{{burger_name}}</h3>

                        <button class="col-4 btn btn-success float-right change-devoured" data-id="{{id}}"
                            data-devoured="1">Devour It!</button>
                    </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6 margin-fix">
            <h2>Devoured List:</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item-danger">

                    <div class="row clearfix">

                        <h3 class="col-11 text-capitalize"> {{burger_name}}</h3>

                        <button class="col-1 btn btn-danger float-right delete-burger" data-id="{{id}}"
                            data-burger_name="{{burger_name}}">X</button>
                    </div>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </section>

    <section class="row mt-3 fixed-bottom white-background">
        <div class="container d-flex justify-content-center">

            <form class="col-12 text-center create-form" action="/api/burgers" method="post">

                <div class="row">

                    <h2 class="col-12">Add a new Burger!</h2>
                </div>

                <div class="row">

                    <textarea class="col-12" id="burger_name"></textarea>
                </div>

                <div class="row  d-flex justify-content-center">

                    <button class="col-6 btn btn-success" type="submit">Add</button>
                </div>
            </form>
        </div>
    </section>
</div>